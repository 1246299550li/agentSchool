/* pages/problem/problem.wxss */

.container {
    width: 100vw;
    height: 90vh;
    padding: 11vw;
    padding-top: 19vw;
    /* background-color: greenyellow; */
}

.radio-group {
    margin-top: 40rpx;
    border-bottom: 1px solid #ddd;
}

.radio-box {
    margin-bottom: 40rpx;
    display: flex;
}

.radio {
    border-top: 1px solid #ddd;
}

.option-text {
    width: auto;
}

.input {
    border: 6rpx solid red;
    margin: 30rpx 0;
}

.submit {
    margin: 0 auto;
    border: 6rpx solid red;
    height: 70rpx;
    width: 150rpx;
    border-radius: 10rpx;
    color: red;
    line-height: 70rpx;
    text-align: center;
    font-size: 50rpx;
}

.title {
    color: red;
    line-height: 70rpx;
    text-align: center;
    font-size: 48rpx;
}

.bottom {
    display: flex;
    justify-content: space-around;
    width: 100vw;
    height: 10vh;
    /* background-color: gray; */
}

.hit {
    border: 6rpx solid red;
    height: 74rpx;
    width: 150rpx;
    border-radius: 10rpx;
    color: red;
    line-height: 74rpx;
    text-align: center;
    font-size: 50rpx;
}

.solve {
    height: 80rpx;
    width: 150rpx;
    border-radius: 10rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 50rpx;
}

.next {
    height: 74rpx;
    width: 130rpx;
}

.next-icon {
    height: 100%;
    width: 100%;
}

/* 模态框css */

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.6;
    overflow: hidden;
    z-index: 900;
    color: #fff;
}

.modal-dialog {
    width: 450rpx;
    /* overflow: hidden; */
    position: fixed;
    top: 32%;
    left: 150rpx;
    z-index: 999;
}

.modal-img {
    position: absolute;
    z-index: -9;
    height: 400rpx;
    width: 500rpx;
    top: -30rpx;
    left: -32rpx;
}

.modal-title {
    padding: 30rpx 0;
    font-size: 40rpx;
    color: red;
    text-align: center;
}

.modal-content {
    padding: 28rpx 28rpx;
    font-size: 38rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    /* border-top: 1px solid #dedede; */
    font-size: 40rpx;
    line-height: 86rpx;
}

.btn-cancel {
    /* margin: 0 auto; */
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    margin: 0 auto;
    width: 50%;
    color: red;
    text-align: center;
}
