/* pages/problem/problem.wxss */

.container {
    width: 100vw;
    height: 90vh;
    padding: 10vw;
    padding-top: 20vw;
    /* background-color: greenyellow; */
}

.radio-group {
    margin-top: 40rpx;
    border-bottom: 1px solid #ddd;
}

.radio-box {
    margin-bottom: 40rpx;
    display: flex;
}

.radio {
    border-top: 1px solid #ddd;
}

.option-text {
    width: auto;
}

.input {
    border: 6rpx solid red;
    margin: 30rpx 0;
}

.submit {
    margin: 0 auto;
    border: 6rpx solid red;
    height: 70rpx;
    width: 150rpx;
    border-radius: 10rpx;
    color: red;
    line-height: 70rpx;
    text-align: center;
    font-size: 50rpx;
}

.title {
    color: red;
    line-height: 70rpx;
    text-align: center;
    font-size: 48rpx;
}

.bottom {
    display: flex;
    justify-content: space-around;
    width: 100vw;
    height: 10vh;
    /* background-color: gray; */
}

.hit {
    border: 6rpx solid red;
    height: 74rpx;
    width: 150rpx;
    border-radius: 10rpx;
    color: red;
    line-height: 74rpx;
    text-align: center;
    font-size: 50rpx;
}

.solve {
    height: 80rpx;
    width: 150rpx;
    border-radius: 10rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 50rpx;
}

.next {
    height: 74rpx;
    width: 130rpx;
}

.next-icon {
    height: 100%;
    width: 100%;
}

/* 模态框css */

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.6;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 20rpx;
}

.modal-title {
    padding-top: 30rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 25rpx 32rpx;
    font-size: 34rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-cancel {
    /* margin: 0 auto; */
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    margin: 0 auto;
    width: 50%;
    color: #ec5300;
    text-align: center;
}
